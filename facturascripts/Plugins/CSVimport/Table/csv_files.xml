<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : csv_files.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the csv_files table.
-->
<table>
    <column>
        <name>codcuenta</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>csvcolumns</name>
        <type>text</type>
    </column>
    <column>
        <name>date</name>
        <type>date</type>
        <null>NO</null>
        <default>CURRENT_DATE</default>
    </column>
    <column>
        <name>expiration</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <column>
        <name>expirationtype</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idfile</name>
        <type>integer</type>
    </column>
    <column>
        <name>mode</name>
        <type>character varying(20)</type>
    </column>
    <column>
        <name>name</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>noutf8file</name>
        <type>boolean</type>
    </column>
    <column>
        <name>options</name>
        <type>text</type>
    </column>
    <column>
        <name>path</name>
        <type>character varying(200)</type>
    </column>
    <column>
        <name>profile</name>
        <type>character varying(30)</type>
        <null>NO</null>
    </column>
    <column>
        <name>startline</name>
        <type>integer</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>template</name>
        <type>character varying(50)</type>
    </column>
    <column>
        <name>url</name>
        <type>text</type>
    </column>
    <column>
        <name>size</name>
        <type>integer</type>
    </column>
    <constraint>
        <name>csv_files_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_csv_files_attached_files</name>
        <type>FOREIGN KEY (idfile) REFERENCES attached_files (idfile) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_template_csv_files</name>
        <type>UNIQUE (template)</type>
    </constraint>
    <constraint>
        <name>ca_csv_files_cuentasbanco</name>
        <type>FOREIGN KEY (codcuenta) REFERENCES cuentasbanco (codcuenta) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
</table>